{# contacts.twig #}
{% extends "base/layout.twig" %}

{% block head %}{{ parent() }}{% endblock %}

{% block title %}Contacts{% endblock %}

{% block main %}
<div>
    <h2 class="center">Home > Contacts</h2>
    <h1 class="center">Contacts</h1>
</div>

<div>
    <div>
        <p>Contact Us!</p>
        <p>Your Message</p>
        <form action="#">
            <span class="fa fa-map-marker">Address: 350 Fifth Avenue, 34th floor<br/>
            New York, NY 10118-3299 USA
            <input type="text" name="name" value="Your name">
            <span class="fa fa-phone">800-234-5689<br>
            <input type="text" name="skype" value="Your skype"><br>
            <span class="fa fa-envelope-o">info@yoursite.com<br>
            <input type="text" name="email" value="Your e-mail"><br><br>
            <input type="text" name="message" value="Your message"><br><br>
            <div>
                <button class=""><span class="fa fa-linkedin"></span></button>
                <button class=""><span class="fa fa-instagram"></span></button>
                <button class=""><span class="fa fa-twitter"></span></button>
                <button class=""><span class="fa fa-facebook"></span></button>
                <button class=""><span class="fa fa-google-plus"></span></button>
            </div>
            <input type="submit" value="Send message">
        </form>
    </div>
</div>

{% endblock %}

{% block footer %}{{ parent() }}{% endblock %}
